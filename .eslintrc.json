{
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    // use typescript parser to lint typescript files
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": ["./tsconfig.json"]
    },
    // eslint plugins that add functionality for linting react, hooks and typescript code
    "plugins": ["react", "react-hooks", "@typescript-eslint"],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react-hooks/exhaustive-deps": "warn",
        "react/display-name": "off", // turns of the rule to include display name for React components
        "@typescript-eslint/no-unused-vars": [
            // throw errors if there are unused variables in the codebase
            "warn",
            {
                "ignoreRestSiblings": true, // ignore unused vars when omitting properties from an object using rest properties
                "args": "none" // turns off the unused variables rule for unused function arguments
            }
        ]
    },
    "settings": {
        "react": {
            "pragma": "React", // Pragma to use, default to "React"
            "version": "detect" // React version. "detect" automatically picks the version you have installed.
        }
    },
    "globals": {
        "expect": "readonly" // jest adds expect to global for ease out writing tests
    }
}