{
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "plugins": ["@typescript-eslint", "react", "react-hooks"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": ["warn"],
    "no-console": "warn",
    "react/react-in-jsx-scope": "off",           // Next.js handles React import
    "react/prop-types": "off",                   // Using TypeScript instead
    "react-hooks/exhaustive-deps": "warn",       // Warn for missing dependencies
    "react-hooks/rules-of-hooks": "error",       // Ensure hooks are used correctly
    "no-unused-vars": "off"                      // Disable base rule in favor of TS version
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
